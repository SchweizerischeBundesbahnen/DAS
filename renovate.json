{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["pub"],
      "groupName": "auto_route",
      "matchPackagePrefixes": ["auto_route", "auto_route_generator"]
    },
    {
      "matchPaths": ["webapp/**"],
      "enabled": false
    }
  ],
  "schedule": ["before 7am on Thursday"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}
