{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "packageRules": [
    {
      "matchFileNames": [
        "das_playground/**",
        "das_client/**"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "minimumReleaseAge": "3 days"
    }
  ],
  "schedule": [
    "before 7am on Thursday"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}
