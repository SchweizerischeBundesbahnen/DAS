{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "packageRules": [
    {
      "matchManagers": [
        "pub"
      ],
      "groupName": "auto_route",
      "matchPackageNames": [
        "auto_route{/,}**",
        "auto_route_generator{/,}**"
      ]
    },
    {
      "description": "Group dependencies from components",
      "matchFileNames": [
        "das_client/**/pubspec.yaml"
      ],
      "groupName": "das-client-component-updates"
    },
    {
      "matchFileNames": [
        "das_playground/**"
      ],
      "enabled": false
    }
  ],
  "schedule": [
    "before 7am on Thursday"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0
}
