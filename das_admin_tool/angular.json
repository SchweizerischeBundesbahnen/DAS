{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "das_admin_tool": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": {
          "code": "de-CH",
          "subPath": "de"
        },
        "locales": {
          "fr-CH": {
            "translation": "src/i18n/messages.fr-CH.json",
            "subPath": "fr"
          },
          "it-CH": {
            "translation": "src/i18n/messages.it-CH.json",
            "subPath": "it"
          }
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss",
              "node_modules/@sbb-esta/lyne-elements/off-brand-theme.css"
            ],
            "polyfills": [
              "@angular/localize/init"
            ],
            "localize": [
              "de-CH"
            ]
          },
          "configurations": {
            "production": {
              "outputPath": {
                "base": "dist/das_admin_tool"
              },
              "localize": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "das_admin_tool:build:production"
            },
            "development": {
              "buildTarget": "das_admin_tool:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "format": "json",
            "outputPath": "src/i18n"
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss",
              "node_modules/@sbb-esta/lyne-elements/off-brand-theme.css"
            ],
            "polyfills": [
              "@angular/localize/init"
            ]
          },
          "configurations": {
            "ci": {
              "browsers": "ChromeHeadless",
              "codeCoverage": true,
              "sourceMap": true,
              "progress": false,
              "watch": false,
              "reporters": [
                "dots"
              ]
            }
          }
        },
        "ngsscbuild": {
          "builder": "angular-server-side-configuration:ngsscbuild",
          "options": {
            "additionalEnvironmentVariables": [
              "INSTANA_KEY"
            ],
            "buildTarget": "das_admin_tool:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "das_admin_tool:build:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": [
      "angular-eslint"
    ]
  }
}
